<html lang='en'>
<head>
    <meta charset='utf-8'>
    <link rel ='stylesheet' href ='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css'>
    <link rel ='stylesheet' href ='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
    <link rel='stylesheet' href='/../css/styles.css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js'></script>
    <title>Volunteer Center</title>
</head>
<body>
    <nav class='navbar navbar-default navbar-fixed-top'>
     <div class='container-fluid'>
       <div class='navbar-header'>
         <button type='button' class='navbar-toggle' data-toggle='collapse' data-target='#volunteerNavbar'>
           <span class='icon-bar'></span>
           <span class='icon-bar'></span>
           <span class='icon-bar'></span>
         </button>
         <a class='navbar-brand' href='/'>Volunteer Center</a>
       </div>
       <div class="collapse navbar-collapse" id='volunteerNavbar'>
         <ul class='nav navbar-nav'>
           <li><a href='/supervisor-login'>Supervisor Log-in</a></li>
           <li><a href='/volunteer-login'>Volunteer Log-in</a></li>
           <li><a href='/create-volunteer'>Create an account</a></li>
         </ul>
         <ul class='nav navbar-nav navbar-right'>
           <li><a href='https://github.com/k-giardchase/volunteer_management.git'><i class="fa fa-github"></i></a></li>
         </ul>
       </div>
     </div>
   </nav>
   <header>
       <div class='jumbotron text-center'>
           <br>
           <h1>Welcome to Volunteer Center</h1>
           <p>Get involved. Make a difference.</p>
       </div>
   </header>
   <section>
      <div class='row'>
       <div class="col-md-3">
           <h1>Join a committee</h1>
           {% if committees is not empty %}
                {% for committee in committees %}
                    <li>{{ committee.getCommitteeName }}</li>
                {% endfor %}
            {% else %}
                <h3>No committees to display</h3>
           {% endif %}
       </div>
       <div class="col-md-6">
           <p>We couldn't do the work that we do without the help of volunteers.</p>
           <p>Thanks for stopping by.</p>

       </div>
       <div class="col-md-3">
           <h1>Upcoming opportunities</h1>
           {% if events is not empty %}
               {% for event in events %}
               <dl class='dl-horizontal'>
                   <dt>Name</dt>
                   <dd>{{ event.getEventName }}</dd>
                   <dt>Date</dt>
                   <dd>{{ event.getEventDate }}</dd>
                   <dt>Location</dt>
                   <dd>{{ event.getLocation }}</dd>
                   <dt>Information</dt>
                   <dd><a href='/event/{{ event.getId }}'>Click for more info</a></dd>
               </dl>
               {% endfor %}
           {% else %}
                <h3>No opportunites to display</h3>
           {% endif %}
       </div>
   </div>
   </section>
</body>
</html>
